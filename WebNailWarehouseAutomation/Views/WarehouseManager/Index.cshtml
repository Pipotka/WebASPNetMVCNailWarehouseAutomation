@using WebNailWarehouseAutomation.Models.ClassEnums
@*
    //Add nails page
*@

@model Nail
@{
    ViewData["Title"] = "Добавление товара";
}
<h1>Добавление товара на склад</h1>

<form method="post"
    asp-controller="WarehouseManager"
    asp-action="Check">

    <label asp-for="Name"></label>
    <input asp-for="Name" placeholder="Введите название" />
    <span asp-validation-for="Name"></span>
    <br/>

    <label asp-for="Diameter"></label>
    <input type="number" step="0.01" min="0" placeholder="Введите диаметр" asp-for="Diameter" />
    <span asp-validation-for="Diameter"></span>
    <br />

    <label asp-for="Length"></label>
    <input type="number" step="0.01" min="0" placeholder="Введите длину" asp-for="Length" />
    <span asp-validation-for="Length"></span>
    <br />

    
    <label asp-for="Material"></label>
    <select class="form-control" asp-for="Material" asp-items="Html.GetEnumSelectList<NailMaterials>()"></select>
    <span asp-validation-for="Material"></span>
    <br />

    <label asp-for="Quantity"></label>
    <input type="number" step="1" min="0" placeholder="Введите количество" asp-for="Quantity" />
    <span asp-validation-for="Quantity"></span>
    <br />

    <label asp-for="PriceExcludingVAT"></label>
    <input type="number" step="0.01" min="0" placeholder="Введите цену" asp-for="PriceExcludingVAT" />
    <span asp-validation-for="PriceExcludingVAT"></span>
    <br />

    <button type="submit" class="btn btn-success">Добавить</button>
    <button type="button" href="" class="btn btn-danger">Отмена</button>
</form>